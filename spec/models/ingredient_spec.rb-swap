require "rails_helper"
RSpec.describe Ingredient do
  it "expects an Ingredient to have a name" do
    ingredient = Ingredient.new({name: "Test Ingredient"})
    expect(ingredient.name).to eq("Test Ingredient")
  end

  it "expects an Ingredient to have a quantity" do
    ingredient = Ingredient.new({quantity: "Test Quantity"})
    expect(ingredient.quantity).to eq("Test Quantity")
  end
end
