class Recipe

  DEFAULT_NAME = "Unamed Recipe"
  attr_accessor :name, :ingredients

  def initialize(args = {})
    @name = args.fetch(:name, DEFAULT_NAME)
    @ingredients = []
  end
  
  def name
    @name
  end

  def submitable?
    return false if @name == DEFAULT_NAME or @ingredients.empty?
  end
end
